<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.demo_google_map.pulkit.activities.MainActivity">

    <TextView
        android:id="@+id/layers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Layers"
        android:textAppearance="?android:textAppearanceMedium" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/layers"
        android:layout_margin="5dp"
        android:background="#000" />

    <TextView
        android:id="@+id/gps_enabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:padding="5dp"
        android:text="GPS enabled"
        android:textAppearance="?android:textAppearanceMedium" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/gps_enabled"
        android:layout_margin="5dp"
        android:background="#000" />

    <TextView
        android:id="@+id/tv_get_single_user_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:padding="5dp"
        android:text="Get Single User Location"
        android:textAppearance="?android:textAppearanceMedium" />

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_get_single_user_location"
        android:layout_margin="5dp"
        android:background="#000" />

    <TextView
        android:id="@+id/custom_search_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3"
        android:padding="5dp"
        android:text="Custom Search Location, Marker"
        android:textAppearance="?android:textAppearanceMedium" />

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/custom_search_location"
        android:layout_margin="5dp"
        android:background="#000" />

    <TextView
        android:id="@+id/text_polyline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line4"
        android:padding="5dp"
        android:text="Polyline"
        android:textAppearance="?android:textAppearanceMedium" />

    <View
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/text_polyline"
        android:layout_margin="5dp"
        android:background="#000" />

    <TextView
        android:id="@+id/text_near_by_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line5"
        android:padding="5dp"
        android:text="Near By Places, Duration, Distance, Polyline"
        android:textAppearance="?android:textAppearanceSmall" />

    <View
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/text_near_by_places"
        android:layout_margin="5dp"
        android:background="#000" />

    <TextView
        android:id="@+id/text_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line6"
        android:padding="5dp"
        android:text="Path, Polyline"
        android:textAppearance="?android:textAppearanceMedium" />

    <View
        android:id="@+id/line7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/text_path"
        android:layout_margin="5dp"
        android:background="#000" />

</RelativeLayout>






